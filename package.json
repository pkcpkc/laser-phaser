{
  "name": "laser-phaser",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "debug": "vite --mode debug",
    "build": "npm run build:atlases && npm run build:markers && npm run build:storylines && tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "posttest": "rm -rf tests/temp",
    "test:watch": "vitest",
    "test:check": "tsx scripts/check-tests.ts",
    "test:e2e": "playwright test",
    "test:e2e-ui": "playwright test --ui",
    "lint": "tsc --noEmit",
    "build:markers": "tsx scripts/generate-markers.ts",
    "build:atlases": "node scripts/generate-atlases.js",
    "build:colors": "tsx scripts/generate-color-palette.ts",
    "build:storylines": "tsx scripts/build-storylines.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/glob": "^8.1.0",
    "@types/pngjs": "^6.0.5",
    "glob": "^13.0.0",
    "jsdom": "^27.2.0",
    "pngjs": "^7.0.0",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-terminal": "^1.3.0",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "free-tex-packer-core": "^0.3.5",
    "phaser": "^3.90.0"
  }
}